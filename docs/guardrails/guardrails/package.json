{
  "name": "@signaltree/guardrails",
  "version": "1.0.0",
  "description": "Development-only performance monitoring and anti-pattern detection for SignalTree",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "development": {
        "import": "./dist/index.mjs",
        "require": "./dist/index.js"
      },
      "production": {
        "import": "./dist/noop.mjs",
        "require": "./dist/noop.js"
      },
      "default": "./dist/noop.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "tsup",
    "build:dev": "tsup --env.NODE_ENV development",
    "build:prod": "tsup --env.NODE_ENV production",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "size": "size-limit",
    "analyze": "npm run build && source-map-explorer dist/*.js"
  },
  "peerDependencies": { "@signaltree/core": "^4.0.0" },
  "devDependencies": {
    "@signaltree/core": "^4.0.0",
    "@signaltree/shared": "^1.0.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.0.0",
    "size-limit": "^10.0.0",
    "source-map-explorer": "^2.5.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "tsup": {
    "entry": { "index": "src/index.ts", "noop": "src/noop.ts" },
    "format": ["cjs", "esm"],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "define": { "__DEV__": "process.env.NODE_ENV !== 'production'" },
    "external": ["@signaltree/core", "@signaltree/shared"]
  },
  "size-limit": [
    { "name": "Development Build", "path": "dist/index.js", "limit": "10 KB" },
    { "name": "Production Build (should be ~0)", "path": "dist/noop.js", "limit": "200 B" }
  ],
  "keywords": [
    "signaltree",
    "state-management",
    "performance",
    "development-tools",
    "guardrails",
    "monitoring",
    "angular",
    "signals"
  ],
  "author": "SignalTree Team",
  "license": "MIT",
  "repository": { "type": "git", "url": "https://github.com/signaltree/signaltree.git", "directory": "packages/guardrails" },
  "bugs": { "url": "https://github.com/signaltree/signaltree/issues" },
  "homepage": "https://github.com/signaltree/signaltree/tree/main/packages/guardrails"
}
