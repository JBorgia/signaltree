{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2015", "dom", "es2021"],
    "downlevelIteration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "types": ["@angular/core", "vitest/globals"],
    "paths": {
      "@signaltree/callable-syntax": ["packages/callable-syntax/src/index.ts"],
      "@signaltree/callable-syntax/*": ["packages/callable-syntax/src/*"],
      "@signaltree/core": ["packages/core/src/index.ts"],
      "@signaltree/enterprise": ["packages/enterprise/src/index.ts"],
      "@signaltree/events": ["packages/events/src/index.ts"],
      "@signaltree/events/*": ["packages/events/src/*"],
      "@signaltree/guardrails": ["packages/guardrails/src/index.ts"],
      "@signaltree/ng-forms": ["packages/ng-forms/src/index.ts"],
      "@signaltree/realtime": ["packages/realtime/src/index.ts"],
      "@signaltree/realtime/*": ["packages/realtime/src/*"],
      "@signaltree/shared": ["packages/shared/src/index.ts"],
      "@signaltree/shared/*": ["packages/shared/src/*"],
      "@signaltree/types": ["packages/types/src/index.ts"],
      "@signaltree/utils": ["packages/utils/src/index.ts"]
    }
  },
  "include": ["types.d.ts"],
  "exclude": ["node_modules", "tmp"]
}
