{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@signaltree/ng-forms": ["packages/ng-forms/src/index.ts"],
      "@signaltree/async": ["packages/async/src/index.ts"],
      "@signaltree/batching": ["packages/batching/src/index.ts"],
      "@signaltree/core": ["packages/core/src/index.ts"],
      "@signaltree/devtools": ["packages/devtools/src/index.ts"],
      "@signaltree/entities": ["packages/entities/src/index.ts"],
      "@signaltree/memoization": ["packages/memoization/src/index.ts"],
      "@signaltree/middleware": ["packages/middleware/src/index.ts"],
      "@signaltree/monolith": ["signaltree/src/index.ts"],
      "@signaltree/presets": ["packages/presets/src/index.ts"],
      "@signaltree/serialization": ["packages/serialization/src/index.ts"],
      "@signaltree/time-travel": ["packages/time-travel/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
