{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "../..",
    "outDir": "../../dist/packages/guardrails/dist",
    "declarationDir": "../../dist/packages/guardrails/dist",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": false,
    "module": "ESNext",
    "types": ["node"],
    "paths": {
      "@signaltree/core": ["packages/core/src/index.ts"],
      "@signaltree/core/*": ["packages/core/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "tests/**/*.ts"
  ]
}
