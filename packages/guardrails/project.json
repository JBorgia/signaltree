{
  "name": "guardrails",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/guardrails/src",
  "implicitDependencies": ["core"],
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "dependsOn": ["^build"],
      "options": {
        "main": "packages/guardrails/src/index.ts",
        "tsConfig": "packages/guardrails/tsconfig.lib.prod.json",
        "outputPath": "dist/packages/guardrails",
        "format": ["esm"],
        "additionalEntryPoints": [
          "packages/guardrails/src/factories/index.ts",
          "packages/guardrails/src/noop.ts",
          "packages/guardrails/src/lib/guardrails.ts"
        ],
        "assets": [
          {
            "input": "packages/guardrails",
            "glob": "README.md",
            "output": "."
          },
          {
            "input": "packages/guardrails",
            "glob": "CHANGELOG.md",
            "output": "."
          },
          {
            "input": "packages/guardrails",
            "glob": "package.json",
            "output": "."
          },
          {
            "input": "packages/guardrails/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          }
        ],
        "rollupConfig": "packages/guardrails/rollup.config.mjs",
        "deleteOutputPath": true,
        "buildLibsFromSource": true,
        "useLegacyTypescriptPlugin": false,
        "generatePackageJson": false
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "command": "vitest run",
        "cwd": "packages/guardrails"
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest watch",
        "cwd": "packages/guardrails"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
