{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2022",
    "moduleResolution": "bundler",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "../.."
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
