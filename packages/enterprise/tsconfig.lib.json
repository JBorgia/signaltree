{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "../..",
    "outDir": "../../dist/packages/enterprise/dist",
    "declarationDir": "../../dist/packages/enterprise/dist",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": false,
    "module": "ESNext",
    "types": ["node"],
    "paths": {
      "@signaltree/core": ["packages/core/src/index.ts"],
      "@signaltree/core/*": ["packages/core/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["vitest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "references": [
    {
      "path": "../core/tsconfig.lib.json"
    }
  ]
}
