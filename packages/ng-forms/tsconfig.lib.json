{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": [],
    "typeRoots": ["./src/types", "../../node_modules/@types"],
    "paths": {
      "@signaltree/core": ["../../packages/core/src/index.ts"],
      "@signaltree/core/*": ["../../packages/core/src/*"],
      "@signaltree/shared": ["../../packages/shared/src/index.ts"],
      "@signaltree/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/test-setup.ts",
    "vitest.config.ts",
    "src/**/*.test.ts"
  ],
  "include": ["src/**/*.ts"]
}
