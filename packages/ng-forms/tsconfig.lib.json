{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": [],
    "typeRoots": [
      "./src/types",
      "../../node_modules/@types"
    ],
    "paths": {
      "@signaltree/core": ["../../packages/core/src/index.ts", "../../dist/packages/core/src/index.d.ts"],
      "@signaltree/core/*": ["../../packages/core/src/*"]
    }
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/test-setup.ts",
    "jest.config.ts",
    "src/**/*.test.ts"
  ],
  "include": ["src/**/*.ts"]
}
