{
  "name": "ng-forms",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ng-forms/src",
  "prefix": "signaltree",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "main": "packages/ng-forms/src/index.ts",
        "tsConfig": "packages/ng-forms/tsconfig.lib.prod.json",
        "outputPath": "dist/packages/ng-forms",
        "format": ["esm"],
        "additionalEntryPoints": [
          "packages/ng-forms/src/index.ts",
          "packages/ng-forms/src/audit/index.ts"
        ],
        "assets": [
          { "input": "packages/ng-forms", "glob": "README.md", "output": "." },
          {
            "input": "packages/ng-forms",
            "glob": "package.json",
            "output": "."
          },
          {
            "input": "packages/ng-forms/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          }
        ],
        "rollupConfig": "packages/ng-forms/rollup.config.mjs",
        "deleteOutputPath": true,
        "buildLibsFromSource": true,
        "useLegacyTypescriptPlugin": false,
        "generatePackageJson": false
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/ng-forms/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
