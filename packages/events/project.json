{
  "name": "events",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/events/src",
  "prefix": "lib",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [],
  "implicitDependencies": ["core"],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "dependsOn": ["^build"],
      "options": {
        "main": "packages/events/src/index.ts",
        "tsConfig": "packages/events/tsconfig.lib.prod.json",
        "outputPath": "dist/packages/events",
        "format": ["esm"],
        "additionalEntryPoints": [
          "packages/events/src/nestjs/index.ts",
          "packages/events/src/angular/index.ts",
          "packages/events/src/testing/index.ts"
        ],
        "rollupConfig": "packages/events/rollup.config.mjs",
        "generateExportsField": false,
        "assets": [
          {
            "input": "packages/events",
            "glob": "README.md",
            "output": "."
          },
          {
            "input": "packages/events",
            "glob": "package.json",
            "output": "."
          },
          {
            "input": "packages/events/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          }
        ],
        "external": [
          "@angular/core",
          "@signaltree/core",
          "@nestjs/common",
          "@nestjs/core",
          "bullmq",
          "ioredis",
          "socket.io-client",
          "zod",
          "tslib",
          "rxjs"
        ],
        "deleteOutputPath": true,
        "generatePackageJson": false,
        "useLegacyTypescriptPlugin": false
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/events/tsconfig.lib.prod.json"
        }
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "vitestConfig": "packages/events/vitest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/events/**/*.ts"]
      }
    }
  }
}
