{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "moduleResolution": "node",
    "types": ["node"],
    "skipLibCheck": true,
    "paths": {
      "@signaltree/core": ["../../dist/packages/core/src"],
      "@signaltree/core/*": ["../../dist/packages/core/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["vitest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
