{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "../..",
    "outDir": "../../dist/packages/core/dist",
    "declarationDir": "../../dist/packages/core/dist",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": false,
    "module": "ESNext",
    "types": ["node"],
    "paths": {
      "@signaltree/shared": ["packages/shared/src/index.ts"],
      "@signaltree/shared/*": ["packages/shared/src/lib/*"]
    }
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/test-setup.ts",
    "vitest.config.ts",
    "src/**/*.test.ts"
  ],
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../shared/tsconfig.lib.json"
    }
  ]
}
